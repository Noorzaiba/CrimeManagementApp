<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
           >
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Query Details"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="30sp"
                android:textColor="#800080"
                android:textAlignment="center"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/idTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ID"
                android:textSize="30dp"
                android:width="20dp"/>
            <EditText
                android:id="@+id/idET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ID"
                android:editable="false"
                android:textSize="25dp"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:width="60dp"
                android:textAlignment="center"/>



            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="30dp"
                />
            <EditText
                android:id="@+id/descriptionET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter  Description"
                android:inputType="textPersonName"
                android:textSize="25dp"
                android:width="60dp"
                android:gravity="center"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/statusTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="30dp"
              />

            <EditText
                android:id="@+id/statusET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Status "
                android:inputType="textPersonName"
                android:textSize="25dp"
                android:gravity="center"
                android:textAlignment="center"/>






            <TextView
                android:id="@+id/userTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User ID"
                android:textSize="30dp"
                android:width="20dp"/>


            <EditText
                android:id="@+id/userET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25dp"
                android:width="60dp"
                android:gravity="center"
                android:textAlignment="center"
                android:hint="Enter user Id"
                android:inputType="textEmailAddress" />



            <TextView
                android:id="@+id/docTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record Created Date"
                android:textSize="20dp"
                android:width="20dp"/>
            <EditText
                android:id="@+id/docET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:editable="false"
                android:hint="Creation Time "
                android:gravity="center"
                android:textSize="20dp"
                android:width="60dp"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/douTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record last Updated Date"
                android:textSize="20dp"
                android:width="20dp"/>
            <EditText
                android:id="@+id/douET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:editable="false"
                android:hint="Date of last Updated "
                android:textSize="20dp"
                android:width="60dp"
                android:gravity="center"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/backButton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:textSize="20sp"
                android:background="@drawable/custom_button"
                android:text="Back To List" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:textSize="20sp"
                android:background="@drawable/custom_button"
                android:text="click to save changes" />



            <Button
                android:id="@+id/deleteButton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:textSize="20sp"
                android:background="@drawable/custom_button"
                android:text="Delete Record" />






        </LinearLayout>





    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>