<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
          >
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crime Reported Details"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="30sp"
                android:textColor="#800080"
                android:textAlignment="center"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/idTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crime ID"
                android:textSize="30dp"
              />
            <EditText
                android:id="@+id/idET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Crime ID"
                android:editable="false"
                android:textSize="25dp"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:width="60dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/typeOfCrimeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type of crime"
                android:textSize="30sp"
                android:width="20dp"/>

            <EditText
                android:id="@+id/typeOfCrimeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Type of crime"
                android:editable="false"
                android:textSize="25sp"
                android:width="60dp"
                android:textAlignment="center"/>




            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="30sp"
               />
            <EditText
                android:id="@+id/descriptionET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter  Description"
                android:editable="false"
                android:textSize="25sp"
                android:width="60dp"
                android:gravity="center"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/statusTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="30dp"
                android:width="20dp"/>

            <EditText
                android:id="@+id/statusET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Status "
                android:inputType="textPersonName"
                android:textSize="25dp"
                android:width="60dp"
                android:gravity="center"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/dateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date  Crime occured"
                android:textSize="30dp"
                android:width="100dp"/>
            <EditText
                android:id="@+id/dateET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textSize="25dp"
                android:textAlignment="center"
                android:gravity="center"
                android:inputType="textPersonName"
                android:width="60dp"/>
            <TextView
                android:id="@+id/timeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Time crime  occured"
                android:textSize="30dp"
                android:width="100dp"/>

            <EditText
                android:id="@+id/timeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textSize="20dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:inputType="textPersonName"
                android:width="60dp"/>


            <TextView
                android:id="@+id/userTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User ID"
                android:textSize="30dp"
                android:width="20dp"/>


            <EditText
                android:id="@+id/userET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25dp"
                android:width="60dp"
                android:editable="false"
                android:gravity="center"
                android:textAlignment="center"
                android:hint="user id"
                />



            <TextView
                android:id="@+id/docTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record Created Date"
                android:textSize="20dp"
                android:width="20dp"/>
            <EditText
                android:id="@+id/docET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:editable="false"
                android:hint="Creation Time "
                android:gravity="center"
                android:textSize="20dp"
                android:width="60dp"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/douTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record last Updated Date"
                android:textSize="20dp"
                android:width="20dp"/>
            <EditText
                android:id="@+id/douET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:editable="false"
                android:hint="Date of last Updated "
                android:textSize="20dp"
                android:width="60dp"
                android:gravity="center"
                android:textAlignment="center"/>



            <TextView
                android:id="@+id/idAddressTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Address ID"
                android:textSize="30sp"
                />
            <EditText
                android:id="@+id/idAddressET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ID"
                android:editable="false"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="25sp"
                />
            <TextView
                android:id="@+id/addressTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Address"
                android:textSize="30sp"
                />


            <EditText
                android:id="@+id/addressET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Address"
                android:editable="false"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/cityTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="City"
                android:textSize="30sp"
                />

            <EditText
                android:id="@+id/cityET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="City"
                android:editable="false"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/stateTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="State"
                android:textSize="30sp"
                />

            <EditText
                android:id="@+id/stateET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="State"
                android:editable="false"
                android:textSize="25sp"
                android:gravity="center"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/pincodeTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pincode"
                android:textSize="30sp"
                />

            <EditText
                android:id="@+id/pincodeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="6"
                android:hint="Pin Code"
                android:textSize="25sp"
                android:editable="false"
                android:gravity="center"
                android:textAlignment="center"
               />
            <TextView
                android:id="@+id/latitudeTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Latitude"
                android:textSize="30sp"
                />

            <EditText
                android:id="@+id/latitudeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25sp"
                android:editable="false"
                android:hint="Latitude"
                android:gravity="center"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/longitudeTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Longitude"
                android:textSize="30sp"
                />

            <EditText
                android:id="@+id/longitudeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25sp"
                android:editable="false"
                android:hint="Longitude"
                android:textAlignment="center"
                android:gravity="center_horizontal"
               />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:textSize="20sp"
                android:background="@drawable/custom_button"
                android:text="click to update" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:textSize="20sp"
                android:text="click to save changes"
                android:background="@drawable/custom_button"
                />

            <Button
                android:id="@+id/viewAllPictures"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:textSize="20sp"
                android:background="@drawable/custom_button"
                android:text="Click To View All Pictures" />


        </LinearLayout>





    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>