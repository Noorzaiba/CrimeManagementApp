<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Crime Details"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="35dp"
        android:width="100dp"/>
    <TextView
        android:id="@+id/type_of_crime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="select type of crime:"
        android:textSize="20dp"
        android:width="20dp"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <EditText
        android:id="@+id/descriptionET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter  Description"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:width="60dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/dateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter date Crime occured"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:width="100dp"/>
    <TextView
        android:id="@+id/timeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter time Crime occured"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:width="100dp"/>



    <EditText
        android:id="@+id/userET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:width="60dp"
        android:enabled="false"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:hint="user"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />
    <Button
        android:id="@+id/addressWithoutMapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Address withou Map" />
    <Button
        android:id="@+id/addressByMapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Address Through Map" />

</LinearLayout>