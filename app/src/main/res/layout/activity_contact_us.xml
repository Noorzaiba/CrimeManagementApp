<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context=".activities.Investigator_details.query_report_facilitiy_for_investigator.ContactUsRegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
    <TextView
        android:id="@+id/registerTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:editable="false"
        android:textSize="30sp"
        android:textColor="#800080"
        android:textAlignment="center"
        android:gravity="center"/>
    <TextView
        android:id="@+id/introTV1"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:editable="false"
       android:textAlignment="center"
        android:layout_gravity="center"
        android:text="If you have any quries related to this app  please  let us know "
        android:textSize="20sp"
        />
        <TextView
            android:id="@+id/introTV2"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:editable="false"
            android:textAlignment="center"
            android:text="You can call on this number 81475365822 or send us the query "
            android:layout_gravity="center"
            android:textSize="20sp"
            />


        <EditText
        android:id="@+id/descriptionET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your Query"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25sp"
        android:inputType="textPersonName" />
    <Button
        android:id="@+id/submitButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:layout_marginTop="7dp"

        android:text="submit"
        />
        <Button
            android:id="@+id/resetButton"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:layout_marginTop="7dp"
            android:text="Reset"
            />
</LinearLayout>
</LinearLayout>